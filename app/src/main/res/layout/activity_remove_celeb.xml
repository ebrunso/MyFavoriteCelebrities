<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoveCeleb">

    <EditText
        android:id="@+id/etCelebID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LookupCelebID"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnRemoveCeleb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Celebrity Info"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/etCelebID"
        app:layout_constraintEnd_toEndOf="@id/etCelebID"/>

</androidx.constraintlayout.widget.ConstraintLayout>