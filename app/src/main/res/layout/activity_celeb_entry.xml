<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CelebEntry">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/etFirstName"
        app:layout_constraintEnd_toEndOf="@id/etFirstName"/>

    <EditText
        android:id="@+id/etCelebID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Celebrity ID"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/etLastName"
        app:layout_constraintEnd_toEndOf="@id/etLastName"/>

    <Button
        android:id="@+id/btnSubmitCeleb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Celebrity Info"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/etCelebID"
        app:layout_constraintEnd_toEndOf="@id/etCelebID"/>

</androidx.constraintlayout.widget.ConstraintLayout>